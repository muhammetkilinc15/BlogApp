<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <form  method="post">
            <input type="hidden" name="id" value="<%= category.id %>">
            <div class="row mb-3">
              <label for="title" class="col-sm-2 col-form-label">Adı</label>
              <div class="col-sm-8">
                <input
                  type="text"
                  class="form-control"
                  id="Name"
                  name="Name"
                  value= "<%= category.Name %>"
                />
              </div>
            </div>          
            <div class="row mb-3">
                <div class="col-sm-8 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </div>
          </form>
        </div>
      </div>
      <div>
        <p><%= blogCount %> tane blog bulundu.</p>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 50px;"><b>#</b></th>
                <th style="width: 150px;">Resim</th>   
                <th >Başlık</th> 
                <th style="width: 130px;">Detay</th>  
              </tr>
            </thead>
            <tbody>
              <% let counter=1 %>
              <% blogs.forEach(item => { %>
              <tr>
                <td><%= counter++ %></td>
                <td> <img src="/static/images/<%= item.Image %>" class="img-fluid"></td>
                <td><%= item.Title %></td>
                <td>
                    <a href="/admin/blogs/<%= item.id %>" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/admin/blog/delete/<%= item.id %>" class="btn btn-sm btn-danger">Delete</a>
                </td>

            </tr>

              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
