<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 50px;">Id</th>
                <th style="width: 150px;">Resim</th>   
                <th >Başlık</th> 
                <th style="width: 130px;">Detay</th>  
              </tr>
            </thead>
            <tbody>
              <% blogs.forEach(item => { %>
              <tr>
                <td><%= item.idblog %></td>
                <td> <img src="/static/images/<%= item.Image %>" class="img-fluid"></td>
                <td><%= item.Title %></td>
                <td>
                    <a href="/admin/blogs/<%= item.idblog %>" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/admin/blogs/<%= item.idblog %>" class="btn btn-sm btn-danger">Delete</a>
                </td>

            </tr>

              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
