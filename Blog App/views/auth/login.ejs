<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head")  %> 
</head>
<body>   
    <%- include("../partials/nav")  %> 
    <div class="container mt-3">
        <div class="text-center">
            <h4>Login Sayfası</h4>
        </div>
        <div class="row">
            <div class="col-md-12 mt-3">

                <% if (typeof message !== "undefined") { %>
                    <div class="alert alert-<%=message.class%>">
                        <%= message.text %>
                    </div>
                <% } %>
               

                <form method="post" action="/auth/login?_csrf=<%= crfToken %>">
                    <!-- <input type="hidden" name="_csrf" value="<%= crfToken %>"> -->
                    <div class="row mb-3">
                        <label for="email" class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="email" name="email">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="password" class="col-sm-2 col-form-label">Şifre</label>
                        <div class="col-sm-12">
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                          <button type="submit" class="btn btn-success col-12">Oturum aç</button>
                          <a href="reset-password" class="btn btn-link">Parola Sıfırla</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
   
       
</body>
</html>



